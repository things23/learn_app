<%= simple_form_for [@deck, @card], html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.input :original_text %>
  <%= f.input :translated_text %>
  <%= f.file_field :image %>
  <%= f.text_field :remote_image_url, label:"or image URL" %>
  <%= f.input :review_date %>
  <%= f.error :base %>
  <%= f.button :submit %>
<% end %>